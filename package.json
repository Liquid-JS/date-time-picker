{
    "name": "nxt-pick-datetime",
    "version": "0.0.0",
    "scripts": {
        "start": "ng serve --disable-host-check",
        "build": "ng build --configuration production",
        "build:demo": "ng build --configuration production --localize --base-href https://liquid-js.github.io/nxt-pick-datetime/ demo",
        "analyze": "yarn build:demo --stats-json && webpack-bundle-analyzer dist/demo/stats.json",
        "test": "ng test --code-coverage --source-map false --watch true",
        "lint": "ng lint --fix",
        "lint:sass": "sass-convert --indent 4 --to scss --from scss --recursive --in-place projects/*/src",
        "pages": "cross-env NODE_ENV=production yarn build:demo && cross-env NODE_ENV=production yarn docs && cross-env NODE_ENV=production ngh --dir dist/demo",
        "docs": "typedoc --tsconfig ./projects/nxt-pick-datetime/tsconfig.lib.json --entryPoints ./projects/nxt-pick-datetime/src/public-api.ts --out ./dist/demo/docs"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^12.0.1",
        "@angular/cdk": "^12.0.1",
        "@angular/common": "^12.0.1",
        "@angular/compiler": "^12.0.1",
        "@angular/core": "^12.0.1",
        "@angular/forms": "^12.0.1",
        "@angular/platform-browser": "^12.0.1",
        "@angular/platform-browser-dynamic": "^12.0.1",
        "@angular/router": "^12.0.1",
        "moment": "^2.29.1",
        "rxjs": "<7",
        "tslib": "^2.2.0",
        "zone.js": "~0.11.4"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^12.0.1",
        "@angular/cli": "^12.0.1",
        "@angular/compiler-cli": "^12.0.1",
        "@angular/language-service": "^12.0.1",
        "@angular/localize": "12.0.1",
        "@types/jasmine": "~3.7.4",
        "@types/jasminewd2": "^2.0.9",
        "@types/node": "^15.6.0",
        "angular-cli-ghpages": "^0.6.2",
        "codelyzer": "^6.0.2",
        "cross-env": "^7.0.3",
        "jasmine-core": "~3.7.1",
        "jasmine-spec-reporter": "~7.0.0",
        "karma": "^6.3.2",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage": "~2.0.3",
        "karma-jasmine": "~4.0.1",
        "karma-jasmine-html-reporter": "^1.6.0",
        "ng-packagr": "^12.0.0",
        "protractor": "^7.0.0",
        "puppeteer": "^9.1.1",
        "ts-node": "^10.0.0",
        "tslint": "^6.1.3",
        "typedoc": "^0.20.36",
        "typescript": ">=4.2 <4.3",
        "webpack-bundle-analyzer": "^4.4.2"
    },
    "resolutions": {
        "@babel/core": "^7.14.3",
        "@babel/generator": "^7.14.3",
        "@babel/preset-env": "^7.14.2",
        "typescript": ">=4.2 <4.3"
    }
}
